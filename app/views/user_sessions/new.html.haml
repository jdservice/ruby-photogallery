%h2
  Login

- if flash[:notice]
  = flash[:notice]
  %br

%br

= form_for @user_session, :url => user_session_path do |f|
  %table
    %tr
      %td
        = f.label :username
      %td
        = f.text_field :username
    %tr
      %td
        = f.label :password
      %td
        = f.password_field :password
    %tr
      %td
        = f.check_box :remember_me
      %td
        = f.label :remember_me
  %br
  = f.submit "Login"
  
  :javascript
    document.getElementById("user_session_username").focus();